<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/profile_fragment"
    android:layout_height="match_parent"
    tools:context=".Fragment.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.cardview.widget.CardView
        android:id="@+id/CardAv"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">
        <ImageView
            android:id="@+id/imv_avatar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_person_foreground"
            android:layout_gravity="center"
            android:layout_marginVertical="20dp"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/name_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/CardAv"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:backgroundTint="#FFFFFF"
        android:text="Edit Profile"
        android:textColor="#000000"
        app:cornerRadius="10dp"
        app:strokeWidth="2dp"
        android:id="@+id/btn_edit"/>

    <TextView
        android:id="@+id/inbox_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_edit"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:padding="20dp"
        android:text="INBOX"
        android:background="#E3E2E2"
        android:textAlignment="viewStart"
        android:textSize="30dp" />
    <LinearLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/inbox_field"
        android:orientation="horizontal"
        android:background="@color/black"/>
    <TextView
        android:id="@+id/fav_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line"

        android:background="#E3E2E2"
        android:fontFamily="sans-serif-condensed-medium"
        android:padding="20dp"
        android:text="YOUR CART"
        android:textAlignment="viewStart"
        android:textSize="30dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Members since October 2023"
        android:textAlignment="center"
        android:padding="20dp"
        android:layout_marginBottom="30dp"/>
</RelativeLayout>